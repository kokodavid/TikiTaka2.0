<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.david.tikitaka2">

    <application
        android:allowBackup="true"
        android:icon="@drawable/kud"
        android:label="@string/app_name"
        android:roundIcon="@drawable/kud"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".FirebaseTikiTaka">

        <activity android:name=".CreateEventActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"></activity>
        <activity android:name=".BuyTicketActivity" />
        <activity android:name=".EventDetailActivity" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.Design.Light.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".GetPhoneActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".VerifyPhoneActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>